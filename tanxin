#include<cstdio>
#include<algorithm>
using namespace std;
struct qujian{
	int x,y;
}qu[100];
bool cmp(qujian a,qujian b){
	if(a.x !=b.x) return a.x > b.x;
	else return  a.y < b.y;
}
int main(){
	int n,a,b;
	while( scanf("%d",&n) !=EOF &&n){
		for(int i=0;i<n;i++){
			scanf("%d %d",&qu[i].x,&qu[i].y);
		}
		sort(qu,qu+n,cmp);
		int ans=1,lastx =qu[0].x;
		for(int i=1;i<n;i++){
			if(qu[i].y <= lastx){
				ans++;
				lastx=qu[i].x;
			}		
		}
		printf("%d\n",ans);
	}
	return 0;
}
